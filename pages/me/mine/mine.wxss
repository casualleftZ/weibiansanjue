.container {
  margin-top: 20rpx;
}

.main{
    float: left;
    margin:30rpx 20rpx 40rpx 11rpx;
}

.dbj {
  margin-top: -1rpx;
  border-top: solid 1px;
  border-bottom: solid 1px;
  border-color: #dbdbdb;
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: row;
}

/* 头像view*/

.touxiang {
  padding-top: 20rpx;
  padding-left: 20rpx;
}

/* 头像图片 */

.headPortrait {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border-color: #969696;
  border: solid 1rpx;
}

/* 中间文字 */

.content {
  margin-left: 30rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

/* 名字 */

.name {
  color: #333;
  font-size: 18px;
}

/* 标签 */

.label {
  /* display: flex; */
