<!--pages/me/me.wxml-->

<view wx:if="{{!isLogin}}">
  <image class="head-img" src="/images/avtor.jpg" mode="aspectFill"></image>
  <view style="width:100%">
  <button class="login" size="mini" open-type="getUserInfo" bindgetuserinfo="getUserInfo">立即登录</button>
  </view>
</view>

<view wx:if="{{isLogin}}">
  <image class="head-img" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
  <view class="user-img">
    <van-image round width="200rpx" height="150rpx" src="{{userInfo.avatarUrl}}" />
    <view class="username">
      <text class="name">{{userInfo.nickName}}</text>
    </view>
  </view>
</view>


<view class="me_1">
  <van-cell title="个人资料" icon="location-o" is-link link-type="navigateTo" url="" />
  <van-cell title="历史报告" icon="location-o" is-link/>
</view>
<view class="me_2">
  <van-cell title="推荐给好友" icon="location-o" clickable="true" bind:click="onShareTap" />
  <van-cell title="设置" icon="location-o" is-link url="" />
  <van-cell title="给我们建议" icon="location-o" is-link value="来吐槽~" is-link url="" />
  <van-cell title="关于我们" icon="location-o" is-link url="" />
</view>